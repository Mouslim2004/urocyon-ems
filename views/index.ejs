<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management System</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="index.css">
    <!-- <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/js/bootstrap.bundle.min.js"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid">
          <div class="d-flex">
            <a class="btn btn-danger" type="button" href="/logout">LOG OUT</a>
          </div>
      </div>
    </nav>
    <section id="ems" class="mt-5">
      <div class="title d-flex flex-row justify-content-around">
        <h3>Employee Database Management</h3>
        <button class="btn rounded-pill btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#myModal">Add Employee</button>
      </div>
            <!-- The Modal -->
      <div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
              <h3 class="text-center ms-5 me-3 ps-5">Add a new Employee</h3>
              <button type="button" class="close ms-5 border border-0 bg-white btn-outline-danger" data-bs-dismiss="modal">&times;</button>
            </div>


            <!-- Modal body -->
            <div class="modal-body">
                <form action="/" method="post" id="form">
                  <div class="row mb-3 mt-3">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="First Name" name="name">
                    </div>
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Last Name" name="lastname">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Email" name="email">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Contact" name="contact">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Salary" name="salary">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col">
                      <input type="text" class="form-control" placeholder="Address" name="address">
                    </div>
                  </div>
                  <div class="row mb-3">
                    <div class="col">
                      <input type="date" class="form-control" name="date">
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-success w-100" >Submit</button> 
                    <!-- data-bs-dismiss="modal" -->
                  </div>
                  
                </form>
            </div>

          </div>
        </div>
      </div>

      <div class="container-fluid border w-75 mt-3">
        <div class="row border-bottom">
          <div class="col-4 text-center border-end pt-2">
            <p>Employee List</p>
          </div>
          <div class="col-8 text-center pt-2">
            <p>Employee Information</p>
          </div>
        </div>
        <div class="row">
          <div class="col-xxl-4 text-white p-3 border-end">
           
              <% if (typeof show !== 'undefined' && show.length > 0) { %>
                <% for(var i = 0; i < show.length; i++) { %>
                  <div class="alert alert-white alert-dismissible text-dark border border-secondary">
                    <button type="button" class="btn-close " data-bs-dismiss="alert"></button>
                  <strong class="name-data"><%= show[i].name %> <%= show[i].lastname %></strong>
                </div>
                <% } %>
              <% } else { %>
                <div class="alert alert-secondary alert-dismissible">
                  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                  <p>No data available.</p>
              </div>
                
              <% } %>
           
          </div>
          <div class="col-xxl-8 text-dark p-3 d-flex justify-content-center flex-column">
             <div class="d-flex justify-content-center">
               <img src="/image/profile.jpeg">
             </div>
             <div class="information text-center">
                  <p>No User Search</p>
             </div>
          </div>
        </div>
      </div>

    </section>
     <script src="index.js"></script>
  </body>
</html>